#user-view
  %h1 レビューを書く
  = form_for([@item, @review]) do |f|
    = f.label :title
    %br
    = f.text_field :title
    %br
    = f.label :text
    %br
    = f.text_area :text, class:"text-box"
    %br
    = f.label :rate
    %br
    = f.text_field :rate, placeholder:"1〜5の半角数字で入力してください"
    %br
    .new_registar= f.submit "レビューを投稿する", class:"submit-button"
