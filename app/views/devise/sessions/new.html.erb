<div id="user-view">
  <h2>サインイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "Eメール" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "サインインしたままにする" %>
      </div>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class:"font-13" %><br />
    <% end -%>

    <div class="actions new_registar">
      <%= f.submit "サインイン", class:"submit-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
